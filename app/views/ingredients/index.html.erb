<%- model_class = Ingredient -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:Clave) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:categoría) %></th>
      <th><%= model_class.human_attribute_name(:subcategoría) %></th>
      <th><%=t '.actions', :default => t("helpers.acciones") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= link_to "IN"+ingredient.id.to_s, ingredient_path(ingredient) %></td>
        <td><%= ingredient.nombre %></td>
        <td><%= ingredient.categoria.humanize %></td>
        <td><%= ingredient.subcategoria.humanize %></td>
        <td>
          <%= link_to t('.edit', :default => image_tag("icn_edit.png", :border => 0)),
                      edit_ingredient_path(ingredient), :class => 'btn', :title=> 'Editar ingrediente' %>
          <%= link_to t('.destroy', :default => image_tag("icn_trash.png", :border => 0)),
                      ingredient_path(ingredient),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Eliminar este ingrediente?')) },
                      :class => 'btn btn-danger', :title=> 'Eliminar ingrediente' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ingredient_path,
            :class => 'btn btn-primary' %>
