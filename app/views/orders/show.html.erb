<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
  <dd><%= @order.tipo %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cliente) %>:</strong></dt>
  <dd><%= @order.cliente %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha) %>:</strong></dt>
  <dd><%= @order.fecha %></dd>
  <dt><strong><%= model_class.human_attribute_name(:employee_id) %>:</strong></dt>
  <dd><%= @order.employee_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pagada) %>:</strong></dt>
  <dd><%= @order.pagada %></dd>
  <dt><strong><%= model_class.human_attribute_name(:importe) %>:</strong></dt>
  <dd><%= @order.importe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mesa) %>:</strong></dt>
  <dd><%= @order.mesa %></dd>
  <dt><strong><%= model_class.human_attribute_name(:entregas) %>:</strong></dt>
  <dd><%= @order.entregas %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pedido) %>:</strong></dt>
  <dd><%= @order.pedido %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              orders_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_order_path(@order), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              order_path(@order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
