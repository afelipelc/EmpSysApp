<%- model_class = Extra -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nombre) %>:</strong></dt>
  <dd><%= @extra.nombre.humanize %></dd>
  <dt><strong><%= model_class.human_attribute_name(:categoria) %>:</strong></dt>
  <dd><%= @extra.categoria.humanize %></dd>
  <dt><strong><%= model_class.human_attribute_name(:costo) %>:</strong></dt>
  <dd><%= number_to_currency(@extra.costo) %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.regresar")),
              extras_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.editar")),
              edit_extra_path(@extra), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.eliminar")),
              extra_path(@extra),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
