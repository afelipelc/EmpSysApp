<%- model_class = Extra -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:clave) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:categoría) %></th>
      <th><%= model_class.human_attribute_name(:costo) %></th>
      <th><%=t '.actions', :default => t("helpers.opciones") %></th>
    </tr>
  </thead>
  <tbody>
    <% @extras.each do |extra| %>
      <tr>
        <td><%= link_to "EX"+extra.id.to_s, extra_path(extra) %></td>
        <td><%= extra.nombre.humanize %></td>
        <td><%= extra.categoria.humanize %></td>
        <td><%= number_to_currency(extra.costo) %></td>
        <td>
          <%= link_to t('.edit', :default => image_tag("icn_edit.png", :border => 0)),
                      edit_extra_path(extra), :class => 'btn', :title => "Editar Extra" %>
          <%= link_to t('.destroy', :default => image_tag("icn_trash.png", :border => 0)),
                      extra_path(extra),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Eliminar este Extra?')) },
                      :class => 'btn btn-danger', :title=> 'Eliminar Extra' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.nuevo_extra")),
            new_extra_path,
            :class => 'btn btn-primary' %>
