<%- model_class = Orderdetail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:order_id) %>:</strong></dt>
  <dd><%= @orderdetail.order_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
  <dd><%= @orderdetail.product_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cantidad) %>:</strong></dt>
  <dd><%= @orderdetail.cantidad %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ingredientes) %>:</strong></dt>
  <dd><%= @orderdetail.ingredientes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:extras) %>:</strong></dt>
  <dd><%= @orderdetail.extras %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nota) %>:</strong></dt>
  <dd><%= @orderdetail.nota %></dd>
  <dt><strong><%= model_class.human_attribute_name(:importe) %>:</strong></dt>
  <dd><%= @orderdetail.importe %></dd>
  <dt><strong><%= model_class.human_attribute_name(:enentrega) %>:</strong></dt>
  <dd><%= @orderdetail.enentrega %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              orderdetails_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_orderdetail_path(@orderdetail), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              orderdetail_path(@orderdetail),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
