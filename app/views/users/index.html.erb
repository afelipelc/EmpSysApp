<%- model_class = Employee -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Empleados" %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:usuario) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:privilegio) %></th>
      <th><%= model_class.human_attribute_name(:activo) %></th>
      <th><%=t '.actions', :default => t("helpers.opciÃ³n") %></th>
    </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.username %></td>
        <td><%= employee.nombre %></td>
        <td><%= employee.email %></td>
        <td><%= employee.role.humanize %></td>
        <td><%= employee.activo? ? "Si" : "No" %></td>
        <td>
        <% if current_employee.id != employee.id %>
          <%= link_to t('.edit', :default => image_tag("icn_edit.png", :border => 0)),
                      edit_user_path(employee), :class => 'btn', :title=> 'Editar empleado' %>
        <% else %>
          <%= link_to t('.edit', :default => image_tag("icn_edit.png", :border => 0)),
                      edit_employee_registration_path, :class => 'btn', :title=> 'Editar mi perfil' %>
        <% end %>
          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
