<%- model_class = Sale -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:order_id) %>:</strong></dt>
  <dd><%= @sale.order_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fecha) %>:</strong></dt>
  <dd><%= @sale.fecha %></dd>
  <dt><strong><%= model_class.human_attribute_name(:importepagado) %>:</strong></dt>
  <dd><%= @sale.importepagado %></dd>
  <dt><strong><%= model_class.human_attribute_name(:montorecibido) %>:</strong></dt>
  <dd><%= @sale.montorecibido %></dd>
  <dt><strong><%= model_class.human_attribute_name(:montocambio) %>:</strong></dt>
  <dd><%= @sale.montocambio %></dd>
  <dt><strong><%= model_class.human_attribute_name(:employee_id) %>:</strong></dt>
  <dd><%= @sale.employee_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nota) %>:</strong></dt>
  <dd><%= @sale.nota %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sales_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sale_path(@sale), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sale_path(@sale),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
